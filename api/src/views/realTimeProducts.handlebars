<h2>Productos en tiempo real</h2>

<section>
    <h3>Crear producto</h3>
    <form id="productForm">
        <label>
            Nombre del producto:
            <input type="text" name="producto" placeholder="Nombre del producto" required />
        </label>
        <label>
            Precio:
            <input type="number" name="precio" placeholder="Precio" min="0" step="0.01" required />
        </label>
        <label>
            Stock:
            <input type="number" name="stock" placeholder="Stock" min="0" required />
        </label>
        <label>
            Categoría:
            <input type="text" name="categoria" placeholder="Categoría" />
        </label>
        <button type="submit">Crear</button>
    </form>
</section>

<hr />

<section>
    <h3>Listado de productos</h3>
    <ul id="productsList">
        {{#each products}}
            <li data-id="{{this.id}}">
                <strong>{{this.producto}}</strong>
                - ${{this.precio}}
                - Stock: {{this.stock}}
                - Categoría: {{this.categoria}}
                <button class="delete-product" data-id="{{this.id}}" aria-label="Eliminar {{this.producto}}">Eliminar</button>
            </li>
        {{/each}}
    </ul>
</section>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/realTimeProducts.js"></script>