<h2>Productos en tiempo real</h2>

<section>
  <h3>Crear producto</h3>
  <form id="productForm">
    <label>
      Título:
      <input type="text" name="title" placeholder="Título" required />
    </label>

    <label>
      Descripción:
      <input type="text" name="description" placeholder="Descripción" required />
    </label>

    <label>
      Código:
      <input type="text" placeholder="Se genera automáticamente" disabled />
    </label>

    <label>
      Precio:
      <input type="number" name="price" placeholder="Precio" min="0" step="0.01" required />
    </label>

    <label>
      Stock:
      <input type="number" name="stock" placeholder="Stock" min="0" required />
    </label>

    <label>
      Categoría:
      <input type="text" name="category" placeholder="Categoría" required />
    </label>

    <label>
      Disponible:
      <select name="status">
        <option value="true" selected>true</option>
        <option value="false">false</option>
      </select>
    </label>

    <button type="submit">Crear</button>
  </form>
</section>


<hr />

<section>
  <h3>Listado de productos</h3>
  <ul id="productsList">
    {{#each products}}
      <li data-id="{{this._id}}">
        <strong>{{this.title}}</strong>
        - ${{this.price}}
        - Stock: {{this.stock}}
        - Categoría: {{this.category}}
        <button class="delete-product" data-id="{{this._id}}" aria-label="Eliminar {{this.title}}">
          Eliminar
        </button>
      </li>
    {{/each}}
  </ul>
</section>

<script src="/socket.io/socket.io.js"></script>
<script src="/js/realTimeProducts.js"></script>